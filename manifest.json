{
  "manifest_version": 3,
  "name": "Moard",
  "version": "1.0",
  "description": "주식 정보 사이드패널",
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://finance.naver.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Moard"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}